<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp">

    <ProgressBar
        android:layout_width="@dimen/progressbar_length"
        android:layout_height="@dimen/progressbar_length"
        android:minHeight="@dimen/progressbar_length"
        android:indeterminateOnly="true"
        android:indeterminateDrawable="@drawable/rotating_progressbar"/>

    <TextView
        android:id="@+id/pb_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/fetching_headers"/>

</LinearLayout>